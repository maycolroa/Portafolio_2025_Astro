---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/common/NavBar.astro';
import Footer from '../components/common/Footer.astro';
import ProjectShowcase from '../components/work/ProjectShowcase.astro';
---

<Layout title="Proyectos | Maycol Roa">
  <Navbar activeLink="work" />
  
  <main class="container mx-auto px-16 py-16">
    <h1 class="text-5xl font-bold mb-4">
      Mis <span class="text-emerald-400">Proyectos</span>
    </h1>
    <p class="text-gray-400 max-w-2xl mb-12">
      Explora algunos de mis trabajos más recientes y descubre cómo puedo ayudarte a crear 
      soluciones digitales excepcionales para tu negocio.
    </p>
    
    <div>
      <ProjectShowcase />
    </div>
    
  </main>
  
  <Footer />
</Layout>

<style>
  h1 {
    position: relative;
    z-index: 1;
  }
  
  h1::before {
    content: '';
    position: absolute;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background-color: rgba(16, 185, 129, 0.1);
    z-index: -1;
    left: -20px;
    top: -10px;
  }
</style>
