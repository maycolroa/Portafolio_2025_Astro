---
export interface Props {
  number: string;
  title: string;
  description: string;
  percentage: string;
}

const { number, title, description, percentage } = Astro.props;
---

<div class="bg-gray-900 rounded-lg p-6 border border-gray-800 transition-all duration-300 hover:-translate-y-2 hover:border-emerald-400 hover:shadow-lg group relative overflow-hidden">
  <!-- LÃ­nea vertical decorativa -->
  <div class="absolute top-0 left-0 w-1 h-0 bg-emerald-400 group-hover:h-full transition-all duration-500 rounded-tl-lg rounded-bl-lg"></div>
  
  <div class="mb-3">
    <div class="font-mono text-xl font-bold text-emerald-400 opacity-80">{number}</div>
    <h3 class="text-xl font-bold mb-2 group-hover:text-emerald-400 transition-colors duration-300">{title}</h3>
  </div>
  
  <p class="text-gray-400 mb-5 text-sm">{description}</p>
  
  <div class="flex items-center gap-4">
    <div class="flex-grow h-2 bg-gray-800 rounded-full overflow-hidden">
      <div 
        class="skill-progress h-full bg-emerald-400 rounded-full" 
        style="width: 0%;" 
        data-width={percentage}
      ></div>
    </div>
    <span class="font-mono text-emerald-400 font-semibold min-w-[3rem] text-right">{percentage}</span>
  </div>
</div>
