---
import ProfileImage from './ProfileImage.astro';
import StatsSection from './StatsSection.astro';
---

<main class="container mx-auto px-4 md:px-8 lg:px-12 py-8 overflow-hidden">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 lg:gap-10 items-center">
    <!-- Contenido izquierdo -->
    <div class="pl-4 md:pl-12 lg:pl-20">
      <p class="text-lg mb-1">Software Developer</p>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        Hello I'm<br>
        <span class="block text-emerald-400 mt-4">Maycol Roa</span>
      </h1>
      <p class="text-gray-400 mb-6">
        fond of programming, cats and good coffee<br>
      </p>
      
      <!-- Botones de acciÃ³n -->
      <div class="flex flex-wrap gap-4 mb-10">
        <button class="bg-emerald-400 text-black px-6 py-2 rounded-full flex items-center gap-2 font-medium transition-all duration-300 hover:bg-emerald-500 hover:-translate-y-1 hover:shadow-lg">
          DOWNLOAD CV
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
