---
const projects = [
  {
    id: 'project1',
    number: '01',
    title: 'Frontend Project',
    description: 'Diseño y desarrollo de un sitio web moderno para una tienda de muebles, enfocado en UX y con funcionalidades de comercio electrónico.',
    technologies: ['HTML 5', 'CSS 3', 'JavaScript'],
    image: '/images/project1.jpg'
  },
  {
    id: 'project2',
    number: '02',
    title: 'App Dashboard',
    description: 'Panel de administración para una aplicación SaaS con análisis avanzado de datos y visualizaciones interactivas.',
    technologies: ['React', 'Tailwind CSS', 'Node.js'],
    image: '/images/project2.jpg'
  },
  {
    id: 'project3',
    number: '03',
    title: 'Mobile App',
    description: 'Aplicación móvil para rastreo de hábitos y productividad personal con sincronización en la nube y notificaciones personalizadas.',
    technologies: ['React Native', 'Firebase', 'Redux'],
    image: '/images/project3.jpg'
  }
];
---

<div class="relative mt-8 mb-20">
  <div class="projects-container">
    {projects.map((project, index) => (
      <div id={project.id} class={`project ${index === 0 ? 'active' : 'hidden'}`}>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
          <!-- Información del proyecto (lado izquierdo) -->
          <div class="project-info relative">
            <!-- Número grande de fondo -->
            <div class="absolute -top-10 -left-2 text-[110px] font-bold text-gray-800 opacity-10 z-0 font-mono tracking-tighter">
              {project.number}
            </div>
            
            <div class="relative z-10">
              <h2 class="text-4xl font-bold mb-6">{project.title}</h2>
              <p class="text-gray-400 mb-8 leading-relaxed">{project.description}</p>
              
              <!-- Tecnologías con estilo moderno -->
              <div class="flex flex-wrap gap-3 mb-8">
                {project.technologies.map(tech => (
                  <span class="text-emerald-400 border-b-2 border-emerald-400 py-1 font-mono">{tech}</span>
                ))}
              </div>
              
              <!-- Enlaces/botones de proyecto -->
              <div class="flex space-x-4">
                <a href="#" class="flex items-center justify-center w-12 h-12 rounded-full bg-gray-800 hover:bg-emerald-400 transition-colors duration-300 group">
                  <svg class="w-5 h-5 text-emerald-400 group-hover:text-black transition-colors duration-300" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
                <a href="#" class="flex items-center justify-center w-12 h-12 rounded-full bg-gray-800 hover:bg-emerald-400 transition-colors duration-300 group">
                  <svg class="w-5 h-5 text-emerald-400 group-hover:text-black transition-colors duration-300" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
          
          <!-- Imagen del proyecto (lado derecho) -->
          <div class="project-image">
            <div class="relative overflow-hidden rounded-lg bg-emerald-900/30 p-3 transition-all duration-500 hover:shadow-xl group">
              <div class="absolute inset-0 bg-gradient-to-r from-emerald-900/20 to-transparent opacity-70 z-0"></div>
              <img 
                src={project.image} 
                alt={project.title} 
                class="rounded-lg w-full object-cover shadow-lg z-10 relative transition-transform duration-700 group-hover:scale-105"
              />
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>
  
  <!-- Navegación de proyectos modernizada -->
  <div class="flex justify-end gap-2 mt-10">
    <button id="prevProject" class="w-14 h-14 bg-gray-800 rounded-full flex items-center justify-center text-emerald-400 hover:bg-emerald-400 hover:text-[#000000] transition-all duration-300 hover:-translate-y-1 focus:outline-none">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
    </button>
    <button id="nextProject" class="w-14 h-14 bg-gray-800 rounded-full flex items-center justify-center text-emerald-400 hover:bg-emerald-400 hover:text-[#000000] transition-all duration-300 hover:-translate-y-1 focus:outline-none">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </button>
  </div>
  
  <!-- Indicadores de página -->
  <div class="flex justify-center mt-8">
    {projects.map((_, index) => (
      <button
        class={`w-2 h-2 mx-1 rounded-full transition-all duration-300 focus:outline-none ${
          index === 0 ? 'bg-emerald-400 w-8' : 'bg-gray-600 hover:bg-gray-500'
        }`}
        data-index={index}
        aria-label={`Go to project ${index + 1}`}
      ></button>
    ))}
  </div>
</div>

<!-- Quitamos el script local, ahora se maneja en el Layout -->

<style>
  .project {
    opacity: 0;
    transition: opacity 0.6s ease;
  }
  
  .project.active {
    display: block;
    opacity: 1;
    animation: fadeIn 0.8s ease forwards;
  }
  
  @keyframes fadeIn {
    from { 
      opacity: 0; 
      transform: translateY(20px); 
    }
    to { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }
  
  /* Estilo para transición de indicadores */
  [data-index] {
    transition: all 0.3s ease;
  }
</style>
